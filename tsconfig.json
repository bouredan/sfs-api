{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./dist",
    "target": "es2017",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": false,
    "strict": true
  },
  "include": [
    "index.ts",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
